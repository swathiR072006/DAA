def lcs(X, Y):
    m, n = len(X), len(Y)
    dp = [[0] * (n + 1) for _ in range(m + 1)]
    for i in range(1, m + 1):
        for j in range(1, n + 1):
            if X[i - 1] == Y[j - 1]:
                dp[i][j] = 1 + dp[i - 1][j - 1]   # characters match
            else:
                dp[i][j] = max(dp[i - 1][j], dp[i][j - 1])  # no match
    return dp[m][n]    
X = "ABCBDAB"
Y = "BDCABA"
print("LCS length =", lcs(X, Y))
